<Button>:
    size_hint:1/4,1/5
    font_size:20

<CalculatorLayout>:
    orientation:"vertical"
    padding:4
    TextInput:
        id:display
        text:""
        readonly:True
        foreground_color:1,1,0.55,1
        background_color:0,0,0,1
        font_size:50
        multiline:False
        size_hint:1,1/8

    StackLayout:
        orientation:"lr-bt"
        Button:
            text:"0"
            on_press:root.btn_pressed(self)
        Button:
            text:"="
            background_color:0.4,0.45,0.44,1
            on_press:root.calculate()
        Button:
            text:"."
            on_press:root.btn_pressed(self)
        Button:
            text:"+"
            on_press:root.btn_pressed(self)
        Button:
            text:"1"
            on_press:root.btn_pressed(self)
        Button:
            text:"2"
            on_press:root.btn_pressed(self)
        Button:
            text:"3"
            on_press:root.btn_pressed(self)
        Button:
            text:"-"
            on_press:root.btn_pressed(self)
        Button:
            text:"4"
            on_press:root.btn_pressed(self)
        Button:
            text:"5"
            on_press:root.btn_pressed(self)
        Button:
            text:"6"
            on_press:root.btn_pressed(self)
        Button:
            text:"*"
            on_press:root.btn_pressed(self)
        Button:
            text:"7"
            on_press:root.btn_pressed(self)
        Button:
            text:"8"
            on_press:root.btn_pressed(self)
        Button:
            text:"9"
            on_press:root.btn_pressed(self)
        Button:
            text:"/"
            on_press:root.btn_pressed(self)
        Button:
            text:"Clear"
            size_hint:1,1/10
            on_press:display.text = ""
